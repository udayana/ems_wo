<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EMS_WO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Window insets for proper spacing -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->
    </style>


    
    <!-- Spinner Dropdown Style -->
    <style name="SpinnerDropDownStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/dropdown_popup_background</item>
    </style>
    
    <!-- Popup Menu Style -->
    <style name="PopupMenuStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/popup_menu_background</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuStyle</item>
    </style>
    
    <!-- Delete Menu Item Style -->
    <style name="DeleteMenuItemStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- Share Menu Item Style -->
    <style name="ShareMenuItemStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Global Toolbar Style -->
    <style name="GlobalToolbarStyle" parent="Theme.Material3.DayNight">
        <item name="android:paddingTop">8dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>
