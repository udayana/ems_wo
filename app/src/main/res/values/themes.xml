<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.EMSWorkOrder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.EMSWorkOrder.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.EMSWorkOrder.Button.Outlined</item>
        
        <!-- Input styles -->
        <item name="textInputStyle">@style/Widget.EMSWorkOrder.TextInputLayout</item>
        
        <!-- Spinner styles -->
        <item name="android:spinnerStyle">@style/Widget.EMSWorkOrder.Spinner</item>
        
    </style>
    
    <!-- Button styles -->
    <style name="Widget.EMSWorkOrder.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.EMSWorkOrder.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Text Input Layout styles -->
    <style name="Widget.EMSWorkOrder.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Spinner styles -->
    <style name="Widget.EMSWorkOrder.Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- EditText styles -->
    <style name="Widget.EMSWorkOrder.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- Spinner Dropdown Style -->
    <style name="SpinnerDropDownStyle" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/dropdown_popup_background</item>
    </style>
    
</resources>
