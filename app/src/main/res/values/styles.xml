<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Bottom Navigation Text Style -->
    <style name="BottomNavTextStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!-- Custom Toolbar Style for ABT Page -->
    <style name="ABTToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetEndWithActions">0dp</item>
    </style>

    <!-- Custom ActionBar Style -->
    <style name="ABTActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:gravity">center_vertical</item>
        <item name="displayOptions">showTitle|showHome|homeAsUp</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

</resources>
