<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Remarks Input -->
    <EditText
        android:id="@+id/et_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/input_background"
        android:hint="Enter remarks..."
        android:minLines="2"
        android:maxLines="2"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="14sp" />

    <!-- Upload Photo Button -->
    <Button
        android:id="@+id/btn_upload_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_remarks"
        android:layout_marginTop="16dp"
        android:background="@drawable/outline_button_background"
        android:text="Upload Photo"
        android:textColor="#000000"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="8dp"
        android:padding="16dp" />

    <!-- Photo Preview -->
    <ImageView
        android:id="@+id/iv_photo_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/btn_upload_photo"
        android:layout_marginTop="16dp"
        android:background="@drawable/photo_preview_background"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photo_preview"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_primary_background"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:enabled="false" />

    <!-- Loading Overlay -->
    <View
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Uploading..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>
