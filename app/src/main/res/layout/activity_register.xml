<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_gradient_background">

    <!-- App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Register New EMS User"
        app:titleTextColor="@color/black"
        app:titleTextAppearance="@style/ToolbarTitleStyle" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Form Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/register_form_background"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <!-- Property ID Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property ID"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_prop_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ask your admin"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter name"
                    android:inputType="textPersonName"
                    android:maxLength="15"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Email Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Handphone Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handphone"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_handphone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="08............"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Department Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <Spinner
                    android:id="@+id/spinner_department"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:popupBackground="@drawable/dropdown_popup_background"
                    android:theme="@style/SpinnerDropDownStyle"
                    android:layout_marginBottom="8dp" />

                <!-- Password Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/register_input_background"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Enter password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_secondary"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_password_toggle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_visibility_off"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Toggle password visibility" />

                </LinearLayout>

                <!-- Error Message -->
                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:background="@drawable/error_background"
                    android:textColor="@color/error_red"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:visibility="gone" />

                <!-- Sign Up Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="SIGN UP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Back to Login -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="14sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_back_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login here!"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
