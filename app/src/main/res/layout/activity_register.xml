<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_gradient_background">

    <!-- App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Register New EMS User"
        app:titleTextColor="@color/black"
        app:titleTextAppearance="@style/ToolbarTitleStyle" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Form Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/register_form_background"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <!-- Property / Hotel Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property / Hotel Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <!-- Property Selection Container -->
                <FrameLayout
                    android:id="@+id/container_property_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <!-- Detecting Location View -->
                    <LinearLayout
                        android:id="@+id/layout_detecting_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/register_input_background"
                        android:visibility="gone">

                        <ProgressBar
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:indeterminateTint="@color/primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mendeteksi lokasi Anda..."
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <!-- Selected Property View -->
                    <LinearLayout
                        android:id="@+id/layout_selected_property"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/selected_property_background"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="@color/green" />

                        <TextView
                            android:id="@+id/tv_selected_property"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Manual Property Input View -->
                    <LinearLayout
                        android:id="@+id/layout_manual_property_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- No Property Found Warning -->
                        <LinearLayout
                            android:id="@+id/layout_no_property_found"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/warning_background"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_warning"
                                android:tint="@color/orange" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Property tidak ditemukan di lokasi Anda"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>

                        <!-- Property Name Input -->
                        <EditText
                            android:id="@+id/et_property_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Cari atau ketik nama property"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_secondary"
                            android:background="@drawable/register_input_background"
                            android:padding="8dp"
                            android:textSize="14sp" />

                        <!-- Nearby Properties Suggestion -->
                        <LinearLayout
                            android:id="@+id/layout_nearby_suggestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Suggestion:"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layout_suggestion_buttons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start" />
                        </LinearLayout>

                        <!-- Search Results -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_property_search_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="200dp"
                            android:visibility="gone" />

                        <!-- Property Not Found Alert -->
                        <LinearLayout
                            android:id="@+id/layout_property_not_found_alert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/warning_background"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_warning"
                                android:tint="@color/orange" />

                            <TextView
                                android:id="@+id/tv_property_not_found"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:textColor="@color/orange" />
                        </LinearLayout>

                        <!-- Searching Indicator -->
                        <LinearLayout
                            android:id="@+id/layout_searching"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:indeterminateTint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mencari property..."
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <!-- Hidden Property ID (for registration) -->
                <TextView
                    android:id="@+id/tv_prop_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <!-- Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter name"
                    android:inputType="textPersonName"
                    android:maxLength="15"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Email Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Handphone Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handphone"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/et_handphone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="08............"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <!-- Department Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <Spinner
                    android:id="@+id/spinner_department"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/register_input_background"
                    android:padding="8dp"
                    android:popupBackground="@drawable/dropdown_popup_background"
                    android:theme="@style/SpinnerDropDownStyle"
                    android:layout_marginBottom="8dp" />

                <!-- Password Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/register_input_background"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Enter password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_secondary"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_password_toggle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_visibility_off"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Toggle password visibility" />

                </LinearLayout>

                <!-- Error Message -->
                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:background="@drawable/error_background"
                    android:textColor="@color/error_red"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:visibility="gone" />

                <!-- Sign Up Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="SIGN UP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Back to Login -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="14sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_back_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login here!"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
