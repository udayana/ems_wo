<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_white_background"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Job Title -->
    <TextView
        android:id="@+id/tv_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job 1: Description"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <!-- Row: Before photos  ->  After photos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Before photos list -->
        <LinearLayout
            android:id="@+id/ll_before_photos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <!-- Arrow text -->
        <TextView
            android:id="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="â†’"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- After photos list -->
        <LinearLayout
            android:id="@+id/ll_after_photos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- Button to add AFTER photo (photoDone) -->
    <Button
        android:id="@+id/btn_add_photo_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add After Photo" />

</LinearLayout>
