<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"

    android:background="@drawable/work_order_item_background">

    <!-- Work Order Image/Icon -->
    <ImageView
        android:id="@+id/iv_work_order_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/image_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_photo"
        android:contentDescription="Work order image" />

    <!-- Work Order Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- WO Number, Status, and Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_wo_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WO: 1321"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_wo_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/status_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="NEW"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Forward Button (visible only for head) -->
            <ImageButton
                android:id="@+id/btn_forward"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_forward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Forward"
                android:padding="4dp"
                android:visibility="gone" />

            <!-- Menu Popup Button -->
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu"
                android:padding="4dp"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>



        <!-- Job Description -->
        <TextView
            android:id="@+id/tv_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tes bssar"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Location and Department Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"
                app:tint="#FF1ABC9C" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pool"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_to_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_send"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#FF1ABC9C" />

            <TextView
                android:id="@+id/tv_to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: "
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENG Demo"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Assign To Row (only visible if assignto is not empty) -->
        <LinearLayout
            android:id="@+id/ll_assign_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"
                app:tint="#2196F3" />

            <TextView
                android:id="@+id/tv_assign_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign to: "
                android:textColor="#2196F3"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Date and Priority Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_schedule"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"
                app:tint="#FF1ABC9C" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23 Aug 2025"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_error_outline"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                app:tint="#FF5722" />

            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Review Section (only visible if is_review == 1) -->
        <LinearLayout
            android:id="@+id/ll_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_review_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review: "
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginEnd="4dp" />

            <LinearLayout
                android:id="@+id/ll_rating_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_star_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="2dp"
                    app:tint="#FF9E9E9E" />

                <ImageView
                    android:id="@+id/iv_star_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="2dp"
                    app:tint="#FF9E9E9E" />

                <ImageView
                    android:id="@+id/iv_star_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="2dp"
                    app:tint="#FF9E9E9E" />

                <ImageView
                    android:id="@+id/iv_star_4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="2dp"
                    app:tint="#FF9E9E9E" />

                <ImageView
                    android:id="@+id/iv_star_5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FF9E9E9E" />
            </LinearLayout>
        </LinearLayout>

        <!-- Need Review Button (only visible in Outbox for done status with orderBy matching current user) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_need_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Need Review"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/status_badge_background"
            android:padding="12dp"
            android:visibility="gone"
            android:contentDescription="Need Review" />

    </LinearLayout>

</LinearLayout>

