<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#C9D5F5"
    android:minHeight="300dp"
    android:paddingHorizontal="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            app:tint="?attr/colorOnSurface" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Order Review"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tv_wo_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WO #-"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Balance Spacer -->
        <View
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <!-- Rating Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/ll_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">

                    <ImageButton
                        android:id="@+id/btn_star_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_star"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="1 star"
                        app:tint="#FFD700"
                        android:padding="8dp" />

                    <ImageButton
                        android:id="@+id/btn_star_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_star"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="2 stars"
                        app:tint="#FFD700"
                        android:padding="8dp" />

                    <ImageButton
                        android:id="@+id/btn_star_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_star"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="3 stars"
                        app:tint="#FFD700"
                        android:padding="8dp" />

                    <ImageButton
                        android:id="@+id/btn_star_4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_star"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="4 stars"
                        app:tint="#FFD700"
                        android:padding="8dp" />

                    <ImageButton
                        android:id="@+id/btn_star_5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_star"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="5 stars"
                        app:tint="#FFD700"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Comment Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:hint="Enter your comment..."
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="4"
                    android:maxLines="10"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- Error Message -->
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_cancel_background"
            android:paddingVertical="14dp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit Review"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/status_badge_background"
            android:backgroundTint="#4CAF50"
            android:paddingVertical="14dp"
            android:layout_marginStart="6dp" />
    </LinearLayout>

</LinearLayout>

