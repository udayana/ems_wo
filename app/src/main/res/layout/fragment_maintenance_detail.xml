<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/surface">

    <!-- ================= APP BAR ================= -->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/primary_dark"
        app:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:iconTint="@color/white"
            app:menu="@menu/menu_maintenance_detail" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ================= CONTENT ================= -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="120dp">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/primary" />

            <!-- Asset Image -->
            <ImageView
                android:id="@+id/iv_asset_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/image_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                android:visibility="visible" />

            <!-- Asset Specifications Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/maintenance_container_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asset Detail"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="12dp" />

                <!-- Asset Info Rows -->
                <LinearLayout
                    android:id="@+id/layout_asset_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Asset No -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Asset No"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_asset_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Property -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Property"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_property"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Merk -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Merk"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_merk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Model -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Model"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_model"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Serial No -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Serial No"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_serial_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Capacity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Capacity"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_capacity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Supplier -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Supplier"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_supplier"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Date Purchased -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Date Purchased"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_date_purchased"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                    <!-- Maintenance ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Maintenance ID"
                            android:textSize="13sp"
                            android:textColor="@color/on_surface_variant" />

                        <TextView
                            android:id="@+id/tv_maintenance_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Description Card -->
            <LinearLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/maintenance_container_background"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/on_surface" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <!-- No Schedule Message -->
                <TextView
                    android:id="@+id/tv_no_schedule_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No maintenance schedule available"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone" />

                <!-- View Job Tasks Button - Past (Closest) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_job_tasks_past"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:text="View Job Tasks"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_task"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="10dp"
                    app:elevation="2dp"
                    android:visibility="gone" />

                <!-- View Job Tasks Button - Nearest -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_job_tasks_nearest"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:text="View Job Tasks"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_task"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="10dp"
                    app:elevation="2dp"
                    android:visibility="gone" />

                <!-- View Job Tasks Button - Upcoming -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_job_tasks_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="View Job Tasks"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_task"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="10dp"
                    app:elevation="2dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
