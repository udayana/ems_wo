<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <!-- Date Column (10% of available width) -->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1/1"
        android:textSize="12sp"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0" />

    <!-- Meter LWBP Column (12% of available width) -->
    <TextView
        android:id="@+id/rec_lwbp_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="1234"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0" />

    <!-- Meter WBP Column (12% of available width) -->
    <TextView
        android:id="@+id/rec_wbp_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="5678"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0" />

    <!-- Consume LWBP Column (12% of available width) -->
    <TextView
        android:id="@+id/consume_lwbp_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="100"
        android:textSize="12sp"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0" />

    <!-- Consume WBP Column (12% of available width) -->
    <TextView
        android:id="@+id/consume_wbp_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="50"
        android:textSize="12sp"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0" />

    <!-- Total Cost Column (18% of available width) -->
    <TextView
        android:id="@+id/total_cost_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:gravity="center"
        android:text="150000"
        android:textSize="12sp"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0" />

    <!-- Rec. by Column (24% of available width) -->
    <TextView
        android:id="@+id/rec_by_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:gravity="center"
        android:text="John Doe"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="4dp" />

</LinearLayout>

