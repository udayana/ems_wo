<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Date"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_water_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="In (°C)"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_water_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Out (°C)"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep3"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_high_press"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="High Press"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep4"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_low_press"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Low Press"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep5"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_amp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Amp"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep6"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_volt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Volt"
        android:textSize="11sp"
        android:textColor="@color/on_surface" />

    <View
        android:id="@+id/sep7"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_rec_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Rec By"
        android:textSize="11sp"
        android:textColor="@color/on_surface"
        android:maxLines="1" />

</LinearLayout>

