<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginEnd="12dp">

    <!-- Before Photo -->
    <ImageView
        android:id="@+id/iv_before_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/photo_preview_background"
        android:contentDescription="Before photo"
        android:clickable="true"
        android:focusable="true" />

    <!-- After Photo (PhotoDone) -->
    <ImageView
        android:id="@+id/iv_after_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@drawable/photo_preview_background"
        android:contentDescription="After photo"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

</LinearLayout>

