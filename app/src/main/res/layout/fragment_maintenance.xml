<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/surface">

    <!-- ================= APP BAR ================= -->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/primary_dark"
        app:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar with Buttons -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:contentInsetStart="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:contentInsetEndWithActions="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:paddingEnd="8dp">

                    <!-- Menu Button (Hamburger) -->
                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_menu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/white"
                        android:contentDescription="Menu" />
                    
                    <!-- Camera Button -->
                    <ImageButton
                        android:id="@+id/btn_camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_camera"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/white"
                        android:contentDescription="Camera" />
                    
                    <!-- Material Design Open Scanner Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_scanner_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open scanner"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_qr_scanner"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/primary"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <!-- Header with Title -->
            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maintenance This Week"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ================= CONTENT ================= -->

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Loading State -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/primary" />

        <!-- Error State -->
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:background="@drawable/error_background"
            android:textColor="@color/error"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:gravity="center"
            android:text="No maintenance scheduled this week"
            android:textColor="@color/on_surface_variant"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Maintenance List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="16dp"
            android:paddingBottom="100dp"
            android:visibility="gone" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
