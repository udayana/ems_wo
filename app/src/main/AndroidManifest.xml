<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Android 13+ (API 33+) media permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <!-- POST_NOTIFICATIONS permission removed with Firebase -->

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="EMS WO"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMS_WO">

        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.EMS_WO">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.EMS_WO" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="emswo" android:host="workorder" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.WorkOrderDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.EMS_WO" />

        <activity
            android:name=".activities.ChangeStatusWOActivity"
            android:exported="false"
            android:theme="@style/Theme.EMS_WO" />

        <activity
            android:name=".activities.ChangePendingDoneActivity"
            android:exported="false"
            android:theme="@style/Theme.EMS_WO" />

        <activity
            android:name=".activities.EditWorkOrderActivity"
            android:exported="false"
            android:theme="@style/Theme.EMS_WO" />

        <!-- FileProvider for camera and gallery access -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Firebase messaging service removed -->

    </application>
</manifest>
